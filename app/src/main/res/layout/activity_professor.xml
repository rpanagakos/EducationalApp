<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfessorActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolProfessor"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1A1B41"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsProfessor"
        style="@style/CategoryTab"
        android:background="#1A1B41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabMode="scrollable"
        />
    <WebView
        android:id="@+id/webViewProf"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerProfessor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>