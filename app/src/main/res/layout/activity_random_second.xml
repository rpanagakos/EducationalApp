                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/linearColorQuiz">

                        <ImageView
                            style="@style/imageColorQuiz"
                            android:src="@drawable/number_one"/>
                        <TextView
                            style="@style/plusSymbol"/>
                        <ImageView
                            style="@style/imageNumberQuiz"
