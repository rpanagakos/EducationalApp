                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/linearColorQuiz">

                        <ImageView
                            style="@style/imageColorQuiz"
                            android:src="@mipmap/ic_black"/>

                        <TextView
                            style="@style/equalSymbol"/>

                        <EditText
                            android:id="@+id/randomEditAns1"
                            style="@style/editTextQuiz" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/randomAns1"
                        style="@style/resultQuiz"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
