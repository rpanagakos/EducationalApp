<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolAccount"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#005AA7"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/ic_account"
                    android:layout_marginBottom="22dp"/>
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#FDFFFC"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:layout_marginBottom="32dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/colorsCard"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_colors"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/lightgray"/>
                            <TextView
                                style="@style/totalScore"/>
                            <TextView
                                android:id="@+id/colorsScore"
                                style="@style/scoreText"
                                android:text="8"/>
                            <TextView
                                style="@style/scoreText2"
                                android:text="/10"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_numbers"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/lightgray"/>
                            <TextView
                                style="@style/totalScore"/>
                            <TextView
                                android:id="@+id/numbersScore"
                                style="@style/scoreText"
                                android:text="8"/>
                            <TextView
                                style="@style/scoreText2"
                                android:text="/10"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_food"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/lightgray"/>
                            <TextView
                                style="@style/totalScore"/>
                            <TextView
                                android:id="@+id/foodScore"
                                style="@style/scoreText"
                                android:text="8"/>
                            <TextView
                                style="@style/scoreText2"
                                android:text="/10"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_pets"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/lightgray"/>
                            <TextView
                                style="@style/totalScore"/>
                            <TextView
                                android:id="@+id/animalsScore"
                                style="@style/scoreText"
                                android:text="8"/>
                            <TextView
                                style="@style/scoreText2"
                                android:text="/10"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="8dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/random"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/lightgray"/>
                            <TextView
                                style="@style/totalScore"/>
                            <TextView
                                android:id="@+id/randomScore"
                                style="@style/scoreText"
                                android:text="8"/>
                            <TextView
                                style="@style/scoreText2"
                                android:text="/10"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <Button
                        android:id="@+id/buttonLogOut"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/mybutton"
                        android:text="Sing Out" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>