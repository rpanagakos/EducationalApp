<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.uniapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".NumbersActivity"
            android:label="Numbers Section"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PetsActivity"
            android:label="Pets Section"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FoodActivity"
            android:label="Family Section"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ColorsActivity"
            android:label="Colors Section"
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pop"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".popUpQuiz"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".AccountActivity"
            android:label="My Profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RandomActivity"
            android:label="Random Questions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignUp"
            android:label="Create Account"
            android:parentActivityName=".LogIn" />
        <activity
            android:name=".ProfessorActivity"
            android:label="Student&apos;s Grades"></activity>
        <activity android:name=".RandomSecond"
            android:label="Random Questions"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>